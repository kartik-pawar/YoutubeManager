{

    "manifest_version": 2,
    "name": "Youtube Monitor",
    "version": "1.0",
    "description": "Manage the time you spend on Youtube",

    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "*://*.youtube.com/*"
    ],
    "background": {
        "page":"background.html",
        "persistent": true
    }
  }